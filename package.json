{
  "name": "@zolk/ds-starter-kit",
  "version": "1.0.0",
  "description": "Starter kit for a Lit-based design system",
  "author": "Kevin Zolkiewicz",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "customElements": "dist/custom-elements.json",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "node scripts/build.js --copydir \"docs/dist\"",
    "start": "node scripts/build.js --serve",
    "generate": "plop",
    "lint": "eslint . --ext ts --ext js",
    "lint:fix": "npm run lint -- --fix",
    "test": "web-test-runner \"src/**/*.test.ts\" --node-resolve --puppeteer",
    "test:watch": "web-test-runner \"src/**/*.test.ts\" --node-resolve --puppeteer --watch"
  },
  "dependencies": {
    "lit": "^2.4.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.6",
    "@open-wc/testing": "^3.1.7",
    "@percy/cli": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-puppeteer": "^0.11.0",
    "browser-sync": "^2.27.10",
    "command-line-args": "^5.2.1",
    "del": "^7.0.0",
    "esbuild": "^0.15.15",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-lit-a11y": "^2.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globby": "^13.1.2",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "mkdirp": "^1.0.4",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "recursive-copy": "^2.0.14",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
